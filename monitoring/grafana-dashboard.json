{
  "dashboard": {
    "id": null,
    "title": "daRealestGeek - Production Dashboard",
    "tags": ["daRealestGeek", "production", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        },
        {
          "name": "job",
          "type": "query",
          "query": "label_values(up, job)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Status Overview",
        "type": "stat",
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=~\"$job\", instance=~\"$instance\"}",
            "legendFormat": "{{job}} - {{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "DOWN"}}, "type": "value"},
              {"options": {"1": {"text": "UP"}}, "type": "value"}
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(http_requests_total{job=~\"$job\", instance=~\"$instance\"}[5m])",
            "legendFormat": "{{method}} {{status}} - {{instance}}"
          }
        ],
        "yAxes": [
          {"label": "Requests/sec", "min": 0}
        ]
      },
      {
        "id": 3,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=~\"$job\", instance=~\"$instance\"}[5m]))",
            "legendFormat": "95th percentile - {{instance}}"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=~\"$job\", instance=~\"$instance\"}[5m]))",
            "legendFormat": "50th percentile - {{instance}}"
          }
        ],
        "yAxes": [
          {"label": "Seconds", "min": 0}
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\", job=~\"$job\", instance=~\"$instance\"}[5m]) / rate(http_requests_total{job=~\"$job\", instance=~\"$instance\"}[5m])",
            "legendFormat": "Error Rate - {{instance}}"
          }
        ],
        "yAxes": [
          {"label": "Error Rate", "min": 0, "max": 1}
        ],
        "thresholds": [
          {"value": 0.01, "colorMode": "critical", "op": "gt"}
        ]
      },
      {
        "id": 5,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\", instance=~\"$instance\"}[5m])) * 100)",
            "legendFormat": "CPU Usage - {{instance}}"
          }
        ],
        "yAxes": [
          {"label": "Percent", "min": 0, "max": 100}
        ],
        "thresholds": [
          {"value": 80, "colorMode": "warning", "op": "gt"},
          {"value": 95, "colorMode": "critical", "op": "gt"}
        ]
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "(node_memory_MemTotal_bytes{instance=~\"$instance\"} - node_memory_MemAvailable_bytes{instance=~\"$instance\"}) / node_memory_MemTotal_bytes{instance=~\"$instance\"} * 100",
            "legendFormat": "Memory Usage - {{instance}}"
          }
        ],
        "yAxes": [
          {"label": "Percent", "min": 0, "max": 100}
        ],
        "thresholds": [
          {"value": 80, "colorMode": "warning", "op": "gt"},
          {"value": 95, "colorMode": "critical", "op": "gt"}
        ]
      },
      {
        "id": 7,
        "title": "Disk Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes{instance=~\"$instance\", fstype!=\"tmpfs\"} - node_filesystem_avail_bytes{instance=~\"$instance\", fstype!=\"tmpfs\"}) / node_filesystem_size_bytes{instance=~\"$instance\", fstype!=\"tmpfs\"} * 100",
            "legendFormat": "{{mountpoint}} - {{instance}}"
          }
        ],
        "yAxes": [
          {"label": "Percent", "min": 0, "max": 100}
        ],
        "thresholds": [
          {"value": 80, "colorMode": "warning", "op": "gt"},
          {"value": 95, "colorMode": "critical", "op": "gt"}
        ]
      },
      {
        "id": 8,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{instance=~\"$instance\"}",
            "legendFormat": "Active Connections - {{datname}}"
          },
          {
            "expr": "pg_settings_max_connections{instance=~\"$instance\"}",
            "legendFormat": "Max Connections"
          }
        ],
        "yAxes": [
          {"label": "Connections", "min": 0}
        ]
      },
      {
        "id": 9,
        "title": "Redis Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "redis_memory_used_bytes{instance=~\"$instance\"}",
            "legendFormat": "Used Memory - {{instance}}"
          },
          {
            "expr": "redis_memory_max_bytes{instance=~\"$instance\"}",
            "legendFormat": "Max Memory - {{instance}}"
          }
        ],
        "yAxes": [
          {"label": "Bytes", "min": 0}
        ]
      },
      {
        "id": 10,
        "title": "Queue Length",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 36},
        "targets": [
          {
            "expr": "queue_length{instance=~\"$instance\"}",
            "legendFormat": "{{queue}} - {{instance}}"
          }
        ],
        "yAxes": [
          {"label": "Items", "min": 0}
        ]
      },
      {
        "id": 11,
        "title": "Job Processing Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 36},
        "targets": [
          {
            "expr": "rate(jobs_completed_total{instance=~\"$instance\"}[5m])",
            "legendFormat": "Completed - {{job_type}}"
          },
          {
            "expr": "rate(jobs_failed_total{instance=~\"$instance\"}[5m])",
            "legendFormat": "Failed - {{job_type}}"
          }
        ],
        "yAxes": [
          {"label": "Jobs/sec", "min": 0}
        ]
      },
      {
        "id": 12,
        "title": "Business Metrics",
        "type": "stat",
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 44},
        "targets": [
          {
            "expr": "increase(user_signups_total[24h])",
            "legendFormat": "Daily Signups"
          },
          {
            "expr": "increase(revenue_total[24h])",
            "legendFormat": "Daily Revenue"
          },
          {
            "expr": "active_users_total",
            "legendFormat": "Active Users"
          },
          {
            "expr": "increase(leads_captured_total[24h])",
            "legendFormat": "Daily Leads"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 13,
        "title": "Security Events",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 50},
        "targets": [
          {
            "expr": "rate(auth_login_failures_total{instance=~\"$instance\"}[5m])",
            "legendFormat": "Login Failures - {{instance}}"
          },
          {
            "expr": "rate(security_events_total{type=\"suspicious\", instance=~\"$instance\"}[5m])",
            "legendFormat": "Suspicious Activity - {{instance}}"
          }
        ],
        "yAxes": [
          {"label": "Events/sec", "min": 0}
        ]
      },
      {
        "id": 14,
        "title": "External API Response Times",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 50},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(external_api_request_duration_seconds_bucket{instance=~\"$instance\"}[5m]))",
            "legendFormat": "{{api_name}} - 95th percentile"
          }
        ],
        "yAxes": [
          {"label": "Seconds", "min": 0}
        ]
      },
      {
        "id": 15,
        "title": "Network I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 58},
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{instance=~\"$instance\", device!=\"lo\"}[5m])",
            "legendFormat": "Received - {{device}}"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{instance=~\"$instance\", device!=\"lo\"}[5m])",
            "legendFormat": "Transmitted - {{device}}"
          }
        ],
        "yAxes": [
          {"label": "Bytes/sec", "min": 0}
        ]
      },
      {
        "id": 16,
        "title": "Container Resource Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 58},
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\".*daRealestGeek.*\"}[5m]) * 100",
            "legendFormat": "CPU - {{name}}"
          },
          {
            "expr": "container_memory_usage_bytes{name=~\".*daRealestGeek.*\"} / container_spec_memory_limit_bytes{name=~\".*daRealestGeek.*\"} * 100",
            "legendFormat": "Memory - {{name}}"
          }
        ],
        "yAxes": [
          {"label": "Percent", "min": 0, "max": 100}
        ]
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "enable": true,
          "expr": "deployment_timestamp",
          "iconColor": "blue",
          "titleFormat": "Deployment",
          "textFormat": "Version {{version}} deployed"
        },
        {
          "name": "Alerts",
          "datasource": "prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "red",
          "titleFormat": "Alert: {{alertname}}",
          "textFormat": "{{summary}}"
        }
      ]
    }
  }
}